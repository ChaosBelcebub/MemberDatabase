<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MemberDatabase.ViewModel" 
        xmlns:Properties="clr-namespace:MemberDatabase.Properties" x:Class="MemberDatabase.DataGridView"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized"
        DataContext="{DynamicResource DataGridViewModel}">
    <Window.Resources>
        <vm:DataGridViewModel x:Key="DataGridViewModel"/>
    </Window.Resources>
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Datei"/>
            <MenuItem Header="Bearbeiten"/>
            <MenuItem Header="?"/>
        </Menu>
        <Grid Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DataGrid Grid.Column="1" RenderTransformOrigin="-3.583,-3.154" ItemsSource="{Binding members}" AutoGenerateColumns="True" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="148*"/>
                    <RowDefinition Height="147*"/>
                </Grid.RowDefinitions>
                <TextBox Margin="10" Grid.Row="1" DataContext="{Binding anniversary}">
                </TextBox>
            </Grid>
        </Grid>

    </Grid>
</Window>
